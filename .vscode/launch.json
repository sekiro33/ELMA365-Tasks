    "version": "0.2.0",
    "configurations": [
        {
            "name": "Go: Launch file with redirection",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "debugAdapter": "legacy",
            "args": [
                "${fileDirname}\\tests\\2",
                "${fileDirname}\\tests\\2.a",

            ],
            "dlvFlags": [
                "-r",
                "stdin:${fileDirname}\\tests\\1"
            ]
        }
    ]
}